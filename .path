# set PATH to include ~/bin if it exists
if [ -d "$HOME/bin" ] ; then
	export PATH="$HOME/bin:$PATH"
fi

# set PATH to include ~/bin/node/bin if it exists
if [ -d "$HOME/bin/node/bin" ] ; then
	export PATH="$HOME/bin/node/bin:$PATH"
fi

# set PATH to include ~/.rbenv/bin if it exists & initialize rbenv
if [ -d "$HOME/.rbenv/bin" ] ; then
	export PATH="$HOME/.rbenv/bin:$PATH"
	eval "$(rbenv init -)"
fi
